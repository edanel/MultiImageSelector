<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SampleBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle|showHome</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MaterialTheme" parent="SampleBase">

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:titleTextStyle">@style/MaterialTheme.ActionBar.TitleText</item>


    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>